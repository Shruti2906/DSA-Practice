#include <iostream>

int main() {

  int arr[10] =  {0};
  int (*p) [10] = &arr;
  //int **p = &arr; //error
  //int *p[10] = &arr;//  error

  std::cout<<"\narr: "<<arr<<"\n";
  std::cout<<"\narr: "<<arr+1<<"\n";
  for(int i=0; i<10; i++){
    std::cout<<"\n"<<p[i];
  }


  //h/w
